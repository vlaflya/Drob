<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.drob.MainActivity">


    <EditText
        android:id="@+id/num2"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/denum2"
        app:layout_constraintRight_toRightOf="@+id/denum2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/denum2"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/multButton"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/num2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="109dp" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="58dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/denum1"
        android:layout_width="61dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/num1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/num1"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="150dp"
        android:onClick="OnClickPlus"
        android:text="+"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="+" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:onClick="OnClickMinus"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/subdivButton"
        app:layout_constraintLeft_toLeftOf="@+id/plusButton"
        app:layout_constraintTop_toBottomOf="@+id/plusButton"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="-" />

    <Button
        android:id="@+id/multButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:onClick="OnClickMult"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="@+id/plusButton"
        app:layout_constraintLeft_toRightOf="@+id/plusButton"
        app:layout_constraintTop_toTopOf="@+id/plusButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="*" />

    <Button
        android:id="@+id/repButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="11dp"
        android:onClick="OnClickReplace"
        android:text="rep"
        app:layout_constraintBottom_toBottomOf="@+id/multButton"
        app:layout_constraintLeft_toRightOf="@+id/multButton"
        app:layout_constraintTop_toTopOf="@+id/multButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="rep"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/subdivButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="OnClickSubdiv"
        android:text="/"
        app:layout_constraintLeft_toLeftOf="@+id/multButton"
        app:layout_constraintRight_toRightOf="@+id/multButton"
        app:layout_constraintTop_toBottomOf="@+id/multButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="/" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="19dp"
        android:layout_height="0dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="@+id/denum2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/denum2"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="=" />

    <TextView
        android:id="@+id/denumResult"
        android:layout_width="71dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/numResult"
        android:layout_width="70dp"
        android:layout_height="48dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/denumResult"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/denumResult"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/clrButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="OnClickClear"
        android:text="clr"
        app:layout_constraintLeft_toLeftOf="@+id/repButton"
        app:layout_constraintRight_toRightOf="@+id/repButton"
        app:layout_constraintTop_toBottomOf="@+id/repButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="clr" />

</android.support.constraint.ConstraintLayout>
